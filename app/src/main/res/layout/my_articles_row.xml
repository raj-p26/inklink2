<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/my_articles_row_cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp">

        <TextView
            android:id="@+id/my_articles_row_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_title"
            android:textColor="#001"
            android:textStyle="bold"
            android:textSize="19sp"
            android:layout_marginStart="11dp"
            android:maxLines="1"
            android:maxEms="30"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/my_articles_row_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_title"
            android:textColor="#000"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:maxEms="30"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/my_articles_row_title"
            app:layout_constraintTop_toBottomOf="@id/my_articles_row_title" />

        <TextView
            android:id="@+id/my_articles_row_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_title"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>